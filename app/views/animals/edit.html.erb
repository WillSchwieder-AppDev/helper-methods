<h1>Edit animal</h1>

<% @animal.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<%= form_with(model: @animal, method: :patch) do |form| %>
  <div>
  <%= form.label :name %>
  <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :appearance %>
    <%= form.text_area :appearance, rows: 3 %>
  </div>

  <%= form.button %>
<% end %>
